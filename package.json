{
  "name": "WebpackReactReduxApolloTutorial",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start-api": "babel-node server-api.js",
    "clean": "rm -rf ./dist ./server-build",
    "lint": "eslint .",
    "build-prod": "NODE_ENV=production webpack --config ./config/webpack.prod.client.js",
    "build-dev": "webpack-dev-server --config ./config/webpack.dev.client.js",
    "build-dev-ssr": "webpack --config ./config/webpack.dev.ssr.server.js --watch",
    "build-prod-ssr": "NODE_ENV=production webpack --config ./config/webpack.prod.ssr.server.js",
    "run-prod-server": "node ./server-build/server-bundle.js",
    "start-dev": "yarn clean; yarn build-dev & yarn build-dev-ssr",
    "start-prod": "yarn clean; yarn build-prod; yarn build-prod-ssr; yarn run-prod-server",
    "test": "jest --coverage"
  },
  "jest": {
    "setupFiles": [
      "./src/setupTests.js"
    ],
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!coverage/**",
      "!node_modules/**",
      "!src/index.js",
      "!src/setupTests.js",
      "!public/**",
      "!server-build/**"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "<rootDir>/src/__mocks__/styleMock.js"
    },
    "coverageDirectory": "reports/coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text"
    ],
    "testResultsProcessor": "jest-sonar-reporter"
  },
  "jestSonar": {
    "reportPath": "reports",
    "reportFile": "test-reporter.xml"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^9.5.1",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.5",
    "css-loader": "^3.4.2",
    "danger": "^10.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "enzyme-to-json": "^3.4.3",
    "eslint": "^7.1.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-react": "^7.20.0",
    "jest": "^24.9.0",
    "jest-sonar-reporter": "^2.0.0",
    "mini-css-extract-plugin": "^0.6.0",
    "node-sass": "^4.11.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.2.1",
    "webpack-hot-middleware": "^2.24.3",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "apollo-cache-inmemory": "^1.5.1",
    "cookie-parser": "^1.4.5",
    "dotenv": "^7.0.0",
    "dotenv-expand": "^5.1.0",
    "file-loader": "^3.0.1",
    "graphql": "^14.2.1",
    "graphql-tag": "^2.10.1",
    "isomorphic-fetch": "^2.2.1",
    "nodemon-webpack-plugin": "^4.3.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-loadable": "^5.5.0",
    "react-redux": "^7.0.3",
    "react-router-dom": "^5.0.0",
    "redux": "^4.0.1",
    "url-loader": "^1.1.2"
  }
}
